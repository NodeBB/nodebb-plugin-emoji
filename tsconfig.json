{
  "include": [
    "lib/**/*.ts"
  ],
  "compilerOptions": {
    "types": [],
    "outDir": "build/lib",
    "lib": ["es2019"],
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "sourceMap": true
  },
  "typeAcquisition": {
    "enable": false
  }
}