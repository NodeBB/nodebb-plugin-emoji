{
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "../lib/types.d.ts"
  ],
  "exclude": [
    "lib/admin/extension.tsx"
  ],
  "compilerOptions": {
    "outDir": "../build/public/lib",
    "lib": ["es5", "dom", "es2015.promise", "es2015.iterable"],
    "target": "es5",
    "module": "amd",
    "noImplicitAny": true,
    "sourceMap": true,
    "types": [
      "jquery",
      "bootstrap",
      "preact",
      "socket.io"
    ],

    "jsx": "react",
    "jsxFactory": "h",

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "emoji-dialog": ["lib/emoji-dialog"],
      "emoji": ["lib/emoji"]
    }
  },
  "typeAcquisition": {
    "enable": false
  }
}