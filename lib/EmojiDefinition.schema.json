{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "description": "Human-friendly name of this emoji pack",
      "type": "string",
      "minLength": 3
    },
    "id": {
      "description": "The ID of this emoji pack. Used in the CSS classname, etc",
      "type": "string",
      "minLength": 3
    },
    "attribution": {
      "description": "Legal attribution for using these emoji, if applicable",
      "type": "string"
    },
    "license": {
      "description": "License for these emoji",
      "type": "string"
    },
    "mode": {
      "description": "The mode of this emoji pack. `images` for individual image files. `sprite` for a single image sprite file. `font` for an emoji font.",
      "enum": [
        "images", "sprite", "font"
      ],
      "type": "string"
    }
  },
  "required": [
    "name", "id", "mode"
  ],
  "definitions": {
    "dict": {
      "description": "A map of emoji names to one of the following",
      "type": "object",
      "properties": {
        "aliases": {
          "description": "alternative names for this emoji",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "keywords": {
          "description": "keywords to match when searching for emoji",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ascii": {
          "description": "common ascii representations for this emoji",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "character": {
          "description": "unicode text character",
          "type": "string"
        },
        "categories": {
          "description": "categories this emoji fits in",
          "type": "array",
          "default": ["other"],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "oneOf": [
    {
      "properties": {
        "mode": {
          "pattern": "^images$"
        },
        "images": {
          "description": "**`images` mode** options",
          "type": "object",
          "properties": {
            "directory": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["directory"]
        },
        "dictionary": {
          "$ref": "#/definitions/dict"
        }
      },
      "required": ["images", "dictionary"]
    }
  ]
}